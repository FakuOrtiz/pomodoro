---
import Header from "../components/(header)/Header.astro";
import Footer from "../components/Footer.astro";
import "@fontsource-variable/montserrat";
import "@fontsource-variable/chivo-mono";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" data-theme="dark">
  <head>
    <!--Meta Tags -->
    <meta charset="UTF-8" />
    <meta name="description" content="¡Controla tu tiempo en minutos de estudio y descanso con Chill Pomodoro App! Incluye alertas al finalizar cada tiempo y completar los ciclos." />
    <meta name="author" content="Facundo Ortiz" />
    <meta name="publisher" content="Facundo Ortiz" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="keywords"
      content="pomodoro, tomato, tomatoes, tomate, tomates, metodo, método, metodologia, metodología, estudio, estudiar, concentrarse, concentración, cronómetro, timer, chill, lofi, lo fi, chillout, chill out, tiempo, tiempos, minuto, minutos, horas, segundos, descanso, descansar, descansos, descansos de estudio, métodos, metodos, exámen, examen"
    />
    <link rel="canonical" href="https://chillpomodoro.vercel.app" />
    <!-- Open Graph -->
    <meta property="og:title" content="Chill Pomodoro App" />
    <meta property="og:description" content="¡Controla tu tiempo de estudio y descanso!" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Chill Pomodoro App" />
    <meta property="og:url" content="https://chillpomodoro.vercel.app" />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:image" content="/src/assets/opengraph.webp" />
    <meta property="og:image:alt" content="Chill Pomodoro App" />
    <meta property="og:image:type" content="image/webp" />
    <meta property="og:image:width" content="1366" />
    <meta property="og:image:height" content="768" />
    <!-- Open Graph / Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@FakuOrtiz31" />
    <meta name="twitter:creator" content="@FakuOrtiz31" />
    <meta name="twitter:title" content="Chill Pomodoro App" />
    <meta name="twitter:description" content="¡Controla tu tiempo de estudio y descanso!" />
    <meta name="twitter:image" content="/src/assets/opengraph.webp" />
    <meta name="twitter:image:alt" content="Chill Pomodoro App" />
    <meta name="twitter:image:width" content="1366" />
    <meta name="twitter:image:height" content="768" />
    <!-- Google tag (gtag.js) -->
    <script
      is:inline
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-DY4C3G29GJ"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-DY4C3G29GJ");
    </script>
    <!-- Favicon and Title -->
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
  </head>
  <body class="font-montse p-4 flex flex-col items-center transition relative min-h-screen ">
    <Header />
    <main class="flex flex-col items-center max-w-full pb-10">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root[data-theme="light"] {
    --primary: #e7e6f7;
    --secondary: #0e273c;
  }

  :root[data-theme="dark"] {
    --primary: #0e273c;
    --secondary: #e7e6f7;
  }

  body {
    background-color: var(--primary);
    color: var(--secondary);
  }
</style>
